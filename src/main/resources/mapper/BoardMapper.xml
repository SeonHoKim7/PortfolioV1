<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.PortfolioV1.board.model.BoardMapper">

<!--    SELECT 결과-->
    <resultMap id="BoardResultMap" type="com.example.PortfolioV1.board.dto.BoardResponseDto">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content"       column="content" />
        <result property="writer"        column="writer" />
        <result property="viewCount"          column="view_count" />
        <result property="deleteYn"      column="delete_yn" />
        <result property="createdDate"   column="created_date" />
        <result property="modifiedDate"  column="modified_date" />
    </resultMap>

<!--    WHERE 조건절-->
    <sql id="conditions">
        <where>
            delete_yn = 'N'
            <if test="searchWord != null and searchWord != ''">
                <choose>
                    <when test="searchType == null or searchType == ''">
                        AND (
                        title LIKE CONCAT('%', #{searchWord}, '%')
                        OR content LIKE CONCAT('%', #{searchWord}, '%')
                        OR writer LIKE CONCAT('%', #{searchWord}, '%')
                        )
                    </when>
                    <otherwise>
                        <choose>
                            <when test="searchType == 'title'">
                                AND title LIKE CONCAT('%', #{searchWord}, '%')
                            </when>
                            <when test="searchType == 'content'">
                                AND content LIKE CONCAT('%', #{searchWord}, '%')
                            </when>
                            <when test="searchType == 'writer'">
                                AND writer LIKE CONCAT('%', #{searchWord}, '%')
                            </when>
                        </choose>
                    </otherwise>
                </choose>
            </if>
        </where>
    </sql>

<!--    게시글 수 조회-->
    <select id="count" parameterType="com.example.PortfolioV1.paging.PagingParams" resultType="int">
        SELECT
            COUNT(*)
        FROM
            board
        <include refid="conditions" />
    </select>

<!--    게시글 리스트 조회-->
    <select id="findAll" parameterType="com.example.PortfolioV1.paging.PagingParams" resultMap="BoardResultMap">
        SELECT id
               , title
               , content
               , writer
               , view_count
               , delete_yn
               , created_date
               , modified_date
        FROM
            board
        <include refid="conditions" />
        ORDER BY
            id DESC, created_date DESC
        LIMIT #{pagination.limitStart}, #{boardPerPage}
    </select>
</mapper>